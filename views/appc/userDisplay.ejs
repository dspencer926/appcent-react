<% include ../partials/boilerplate %>
<% include ../partials/nav %>
<h1>User Display</h1>

<table id='user-table'>
  <tr>
    <th> Id</th>
    <th> Username</th>
    <th> First Name</th>
    <th> Last Name</th>
    <th> Email</th>
    <th> Admin</th>
  </tr>
  <% for (let i = 0; i < users.length; i++) { %>
  <tr>
    <td><%= users[i].id %></td>
    <td><%= users[i].username %></td>
    <td><%= users[i].first_name %></td>
    <td><%= users[i].last_name %></td>
    <td><%= users[i].email %></td>
    <td><%= users[i].admin %></td>
    <td><a class='edit-button button' href='/appc/admin/users/edit/<%= users[i].id %>'>EDIT</a></td>
    <td><form method='POST' action='/appc/admin/users/<%= users[i].id %>?_method=DELETE'>
        <input type='submit' class='delete-button button' value='Delete'/>
      </form></td>
  </tr>
  <% } %>
</table>

<% include ../partials/footer %>
<% include ../partials/end %>